#include <iostream>
using namespace std;
#define MAX 5
int main() {
    int queueArr[MAX];
    int FRONT = -1, REAR = -1;
    int choice, value;
    char x;
    do {
        cout << "\n--- QUEUE MENU ---\n";
        cout << "1. Enqueue\n";
        cout << "2. Dequeue\n";
        cout << "3. Peek\n";
        cout << "4. isEmpty\n";
        cout << "5. isFull\n";
        cout << "6. Display\n";
        cout << "Enter your choice: ";
        cin >> choice;
        switch(choice) {
            case 1: 
                if (REAR == MAX - 1) {
                    cout << "Queue Overflow\n";
                } else {
                    cout << "Enter value to insert: ";
                    cin >> value;
                    if (FRONT == -1)
                        FRONT = 0;
                    REAR++;
                    queueArr[REAR] = value;
                    cout << value << " inserted into queue.\n";
                }
                break;
            case 2: 
                if (FRONT == -1 || FRONT > REAR) {
                    cout << "Queue Underflow\n";
                } else {
                    cout << queueArr[FRONT] << " removed from queue.\n";
                    FRONT++;

                    if (FRONT > REAR) {
                        FRONT = REAR = -1;
                    }
                }
                break;
            case 3: 
                if (FRONT == -1 || FRONT > REAR) {
                    cout << "Queue is Empty\n";
                } else {
                    cout << "Front element is: " << queueArr[FRONT] << endl;
                }
                break;
            case 4:
                if (FRONT == -1 || FRONT > REAR)
                    cout << "Queue is Empty\n";
                else
                    cout << "Queue is Not Empty\n";
                break;
            case 5: 
                if (REAR == MAX - 1)
                    cout << "Queue is Full\n";
                else
                    cout << "Queue is Not Full\n";
                break;
            case 6:
                if (FRONT == -1 || FRONT > REAR) {
                    cout << "Queue is Empty\n";
                } else {
                    cout << "Queue elements are:\n";
                    for (int i = FRONT; i <= REAR; i++) {
                        cout << queueArr[i] << endl;
                    }
                }
                break;
        }
        cout << "Do You Want To Continue: ";
        cin >> x;
    } while(x == 'y' || x == 'Y');
    return 0;
}
