#include <iostream>
using namespace std;
#define MAX 5
int main() {
    int stackArr[MAX];
    int TOP = -1;
    int choice, value;
    char x;
    do {
        cout << "\n--- STACK MENU ---\n";
        cout << "1. Push\n";
        cout << "2. Pop\n";
        cout << "3. Peek\n";
        cout << "4. isEmpty\n";
        cout << "5. isFull\n";
        cout << "6. Display\n";
        cout << "Enter your choice: ";
        cin >> choice;
        switch(choice) {
            case 1:
                if (TOP == MAX - 1) {
                    cout << "Stack Overflow\n";
                } else {
                    cout << "Enter value to push: ";
                    cin >> value;
                    TOP++;
                    stackArr[TOP] = value;
                    cout << value << " pushed into stack.\n";
                }
                break;
            case 2: 
                if (TOP == -1) {
                    cout << "Stack Underflow\n";
                } else {
                    cout << stackArr[TOP] << " popped from stack.\n";
                    TOP--;
                }
                break;
            case 3: 
                if (TOP == -1) {
                    cout << "Stack is Empty\n";
                } else {
                    cout << "Top element is: " << stackArr[TOP] << endl;
                }
                break;
            case 4: 
                if (TOP == -1)
                    cout << "Stack is Empty\n";
                else
                    cout << "Stack is Not Empty\n";
                break;
            case 5:
                if (TOP == MAX - 1)
                    cout << "Stack is Full\n";
                else
                    cout << "Stack is Not Full\n";
                break;
            case 6:
                if (TOP == -1) {
                    cout << "Stack is Empty\n";
                } else {
                    cout << "Stack elements are:\n";
                    for (int i = TOP; i >= 0; i--) {
                        cout << stackArr[i] << endl;
                    }
                }
                break;
        }        
                cout << "Do You Want To Continue:\n";
                cin>>x;
        

    } while(x=='y' || x=='Y');
    return 0;
}
